<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <!-- Run Node.js through iisnode -->
    <handlers>
      <add name="iisnode" path="server.js" verb="*" modules="iisnode" />
    </handlers>

    <!-- Allow long-running requests -->
    <security>
      <requestFiltering>
        <requestLimits maxAllowedContentLength="2147483648" /> <!-- 2 GB -->
      </requestFiltering>
    </security>

    <!-- URL Rewrite Rules -->
    <rewrite>
      <rules>
        <!-- 1. API calls go to Node -->
        <rule name="API to Node" stopProcessing="true">
          <match url="^api/(.*)" />
          <action type="Rewrite" url="server.js" />
        </rule>

        <!-- 2. SPA routes go to index.html -->
        <rule name="SPA Routing" stopProcessing="true">
          <match url=".*" />
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
          </conditions>
          <action type="Rewrite" url="index.html" />
        </rule>
      </rules>
    </rewrite>

    <!-- Enable gzip/deflate compression -->
    <urlCompression doStaticCompression="true" doDynamicCompression="true" />

    <!-- Enable directory browsing for debugging (optional) -->
    <directoryBrowse enabled="true" />

    <!-- Logging for iisnode -->
    <iisnode loggingEnabled="true" devErrorsEnabled="true" />
  </system.webServer>
</configuration>
